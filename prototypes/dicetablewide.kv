#:kivy 1.0.9


#tools

<SizeButton>:
    text:'D' + str(self.die_size)

<WeightsPopup>:
    size_hint: None, None
    title: ''
    title_size: 0
    ScrollView:
        id:scroll_shell
        scroll_timeout:70
        StackLayout:
            id: contents
            orientation: 'tb-lr'
            size_hint: None, None


<PlotPopup>:
    title: 'click the legend button for legend.  click on a label to highlight that plot.'
    FloatLayout:
        ScatterLayout:
            id: graph_container
            auto_bring_to_front: False
            do_rotation: False
            size_hint: 1,1
            Graph:
                id: graph
                xlabel: 'the rolls'
                ylabel: 'percent chance'
                y_grid_label: True
                x_grid_label: True
                x_grid: True
                y_grid: True
                x_ticks_major: 2
                y_ticks_major: 1
        Button:
            text:'done'
            size_hint: 0.1, 0.1
            on_press: root.dismiss()
        Button:
            id: legend
            text:'legend'
            size_hint: None, 0.07
            width: self.texture_size[0]
            padding_x: 10
            pos_hint: {'x': 0, 'y': 0.9}
<PlotCheckBox>:
    orientation: 'horizontal'
    CheckBox:
        id: check_box
        size_hint: 0.1, 1
        active: root.active
        canvas:
            Color:
                rgba: 1, 1, 1, 0.4  
            Line: 
                points: self.pos[0] + self.size[0]/4, self.pos[1] +self.size[1]/4, self.pos[0] + 3*self.size[0]/4, self.pos[1] + self.size[1]/4, self.pos[0] + 3*self.size[0]/4, self.pos[1] + 3*self.size[1]/4, self.pos[0] + self.size[0]/4, self.pos[1] + 3*self.size[1]/4, self.pos[0] + self.size[0]/4, self.pos[1] +self.size[1]/4
                width: 3 
                joint: 'miter'
                cap: 'square'               
                
    ScrollView:
        id:scroller
        scroll_timeout: 550
        bar_inactive_color: [0.7, 0.7, 0.7, 0.9]
        size_hint: 0.9, 1
        FlashLabel:
            id:label
            text: root.text
            size_hint: None, 1
            width: self.texture_size[0]

<PageBox>:
    orientation:'vertical'
    Label:
        id: page_box_title
        canvas:
            Color:
                rgba: 0.8,0,0,0.5
            Rectangle:
                pos: self.pos
                size: self.size
        size_hint:1, .04
        halign: 'center'
        valign: 'middle'
        text: 'TITLE'
        text_size:self.size
    BoxLayout:
        id:buttons_container
        orientation: 'horizontal'
        size_hint: 1, 0.05
        Button:
            id:go_left
            size_hint: 0.25, 1
            text: '<==='
            text_size:self.size
            halign: 'right'
            valign: 'middle'
            shorten:True
            shorten_from: 'right'
            max_lines: 1
            on_press: root.show_page(root.current_page - 1)
        NumberInput:
            id:jump_to
            size_hint: 0.25, 1
            on_number_val: root.text_check(self.text)

        Label:
            id:page_total
            size_hint: 0.25, 1

            font_size: (lambda:min(int(0.7 * self.height), int(0.35 * self.width)))()
        Button:
            id:go_right
            size_hint: 0.25, 1
            text: '===>'
            text_size:self.size
            halign: 'left'
            valign: 'middle'
            shorten:True
            shorten_from: 'left'
            max_lines: 1
            on_press: root.show_page(root.current_page + 1)
    Label:
        canvas:
            Color:
                rgba: 0.4,0.8,0.8,0.3
            Rectangle:
                pos: self.pos
                size: self.size
        id:text_container
        size_hint: 1, 0.91
        text:''
        text_size: self.width, self.height

<AddRmDice>:
    orientation:'horizontal'
    padding: 10
    spacing: 10

#big boxes
<ChangeBox>:
    Label:
        id: intro
        text: ''
        text_size:self.size
        valign: 'top'
        halign: 'center'


<AddBox>:
    id:bob
    orientation:'vertical'
    Label:
        id: current
        size_hint: 1, 0.1
        text: 'no dice yet'
        text_size: self.size
    BoxLayout:
        id: custom
        size_hint:1, 0.2
        spacing: 30
        padding: 30
        BoxLayout:
            orientation: 'vertical'
            id: custom_size
            size_hint: 0.5, 1
            Label:
                size_hint: 1, 0.6
                text: 'type custom die size from 2-200'

                text_size: self.size

            NumberInput:
                id:custom_input
                size_hint: 1, 0.4
                on_number_val: root.assign_size_text(self.text)
        FlashButton:
            id:make_weights
            size_hint: 0.5, 1
            text: 'make weights'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            on_press: self.delay(root.add_weights)
    BoxLayout:
        id: size_mod
        orientation: 'horizontal'
        size_hint: 1, 0.38
        GridLayout:
            id:presets
            rows: 2
            size_hint: 0.75, 1
        BoxLayout:
            orientation:'vertical'
            size_hint: 0.25, 1
            Label:
                text:'add a modifier'
                text_size: self.size
                halign: 'center'
                size_hint: 1, 0.2
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.8
                Label:
                    id: slider_num
                    text: str(int(modifier.value))
                    size_hint: 0.25, 1
                Slider:
                    id: modifier
                    orientation: 'vertical'
                    min:-5
                    max:5
                    value:0
                    step:1
                    on_value:root.assign_mod()
                    size_hint: 0.75, 1
                    canvas:
                        Color:
                            rgba:1,0,0,0.5
                        Rectangle:
                            size:self.size
                            pos:self.pos
    Label:
        id: instructions
        size_hint:1, 0.06
        text: 'assign die size/weight/mod-----------------\n-------------------------add the assigned die'
        halign: 'center'
    BoxLayout:
        id: add_it
        size_hint:1, 0.21

<InfoBox>:
    orientation:'vertical'
    padding:10
    Label:
        id:stat_str
        size_hint: 1, 0.15
        text:'test'
        text_size: self.size
        halign: 'center'
    ScrollView:
        id:table_str_wrapper
        size_hint: 1, 0.25
        Label:
            id:dice_table_str
            text: 500*'adfgdg\n'
            size_hint: 1, None
            text_size: self.width, None
            height: dice_table_str.texture_size[1]
            halign: 'center'
    PageBox:
        id:weight_info
        size_hint: 1, 0.6

<GraphBox>:
    orientation: 'vertical'
    BoxLayout:
        id: graph_space
        orientation: 'vertical'
        size_hint: 1, 0.9
    BoxLayout:
        size_hint: 1, 0.1
        FlashButton:
            id: graph_stuff
            text: 'graph it'
            text_size: self.size
            size: self.texture_size
            size_hint: 0.33, 1
            halign: 'center'
            valign: 'middle'
            on_press: self.delay(root.graph_it)
        Button:
            id: clear_selected
            text: 'clear selected'
            text_size: self.size
            size: self.texture_size
            size_hint: 0.33, 1
            halign: 'center'
            valign: 'middle'
            on_press: root.clear_selected()
        Button:
            id: clear_all
            text: 'clear history'
            text_size: self.size
            size: self.texture_size
            size_hint: 0.33, 1
            halign: 'center'
            valign: 'middle'
            on_press: root.confirm.open()
      

<StatBox>:
    BoxLayout:
        spacing: 10
        orientation: 'vertical'
        Label:
            id: table_info
            size_hint: 1, 0.2
            text: 'no dice yet'
            text_size: self.size
            valign: 'middle'
            halign: 'center'
        FloatLayout:
            size_hint: 1, 0.4
            #top row - value1 value2
            Label:
                text:'value 1'
                text_size: self.size
                size_hint:0.25, 0.1
                pos_hint: {'x': 0.1, 'y': 0}
            Label:
                size_hint:0.25, 0.1
                text: 'value 2'
                text_size: self.size
                pos_hint: {'x': 0.5, 'y': 0}
            #2nd row slider
            Slider:
                id:start_slider
                orientation:'vertical'
                min:0
                max:100
                value:1
                step:1
                size_hint:0.25, 0.82
                on_value:root.show_stats()
                pos_hint: {'x': 0.2, 'y': 0.0}
            Slider:
                id:stop_slider
                orientation:'vertical'
                min:0
                max:100
                value:1
                step:1
                on_value:root.show_stats()
                size_hint:0.25, 0.82
                pos_hint: {'x': 0.6, 'y': 0.0}
            #thrid row text input
            Label:
                text:'may type\nin values'
                text_size: self.size
                size_hint:0.2, 0.15
                pos_hint: {'x': 0.01, 'y': 0.9}
            NumberInput:
                id:start_slider_text
                text: '{:,}'.format(int(start_slider.value))
                size_hint:0.3, 0.15
                pos_hint: {'x': 0.2, 'y': 0.9}
                on_number_val: root.assign_text_value('start')
            NumberInput:
                id:stop_slider_text
                text: '{:,}'.format(int(stop_slider.value))
                size_hint:0.3, 0.15
                pos_hint: {'x': 0.6, 'y': 0.9}
                on_number_val: root.assign_text_value('stop')
        Label:
            id:stat_text
            text:'no stats'
            text_size:self.size
            #size: self.texture_size
            size_hint: 1, 0.4
            valign:'top'




#parent
<DicePlatform>:
    orientation: 'horizontal'
    ChangeBox:
        size_hint: 0.2, 1
        id: change_box
    AddBox:
        size_hint: 0.2, 1
        id: add_box
    StatBox:
        size_hint: 0.2, 1
        id: stat_box
    GraphBox:
        size_hint: 0.2, 1
        id: graph_box
    BoxLayout:
        size_hint: 0.2, 1
        id: all_rolls_info
        orientation: 'horizontal'
        AllRollsBox:
            id: all_rolls_box
        InfoBox:
            id: info_box
            
    


